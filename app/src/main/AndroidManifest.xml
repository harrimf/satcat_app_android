<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.satcat.kalys">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" android:required="true"/>

    <application
        android:name="com.satcat.kalys.KalysApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_kalys"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning">

        <activity android:name="com.satcat.kalys.NavigationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.satcat.kalys.SignupLogin.WelcomeActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_active_group"
            android:theme="@style/AppTheme"
            tools:targetApi="jelly_bean" />
        <activity
            android:name="com.satcat.kalys.SignupLogin.LoginActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_active_group"
            android:parentActivityName="com.satcat.kalys.SignupLogin.WelcomeActivity"
            android:theme="@style/AppTheme"
            tools:targetApi="jelly_bean" />
        <activity
            android:name="com.satcat.kalys.SignupLogin.SignupNameActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_active_group"
            android:parentActivityName="com.satcat.kalys.SignupLogin.WelcomeActivity"
            android:theme="@style/AppTheme"
            tools:targetApi="jelly_bean" />
        <activity
            android:name="com.satcat.kalys.SignupLogin.SignupAccountActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_active_group"
            android:parentActivityName="com.satcat.kalys.SignupLogin.SignupNameActivity"
            android:theme="@style/AppTheme"
            tools:targetApi="jelly_bean" />
        <activity
            android:name="com.satcat.kalys.SignupLogin.SignupVerifyActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_active_group"
            android:parentActivityName="com.satcat.kalys.SignupLogin.SignupAccountActivity"
            android:theme="@style/AppTheme"
            tools:targetApi="jelly_bean" />
        <activity
            android:name="com.satcat.kalys.SignupLogin.SignupImageActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_active_group"
            android:parentActivityName="com.satcat.kalys.SignupLogin.SignupVerifyActivity"
            android:theme="@style/AppTheme"
            tools:targetApi="jelly_bean" />
        <activity
            android:name="com.satcat.kalys.CreateChannelActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_active_group"
            android:parentActivityName="com.satcat.kalys.GroupTabActivity"
            android:theme="@style/AppTheme"
            tools:targetApi="jelly_bean" />
        <activity
            android:name="com.satcat.kalys.CreateGroupActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_active_group"
            android:parentActivityName="com.satcat.kalys.StartTabActivity"
            android:theme="@style/AppTheme"
            tools:targetApi="jelly_bean" />
        <activity
            android:name="com.satcat.kalys.OptionsChannelActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_active_group"
            android:parentActivityName="com.satcat.kalys.GroupTabActivity"
            android:theme="@style/AppTheme"
            tools:targetApi="jelly_bean" />
        <activity
            android:name="com.satcat.kalys.OptionsGroupActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_active_group"
            android:parentActivityName="com.satcat.kalys.GroupTabActivity"
            android:theme="@style/AppTheme"
            tools:targetApi="jelly_bean" />
        <activity
            android:name="com.satcat.kalys.JoinGroupActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_active_group"
            android:parentActivityName="com.satcat.kalys.StartTabActivity"
            android:theme="@style/AppTheme"
            tools:targetApi="jelly_bean" />
        <activity
            android:name="com.satcat.kalys.AddMembersActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_active_group"
            android:theme="@style/AppTheme"
            tools:targetApi="jelly_bean" />
        <activity
            android:name="com.satcat.kalys.SettingsActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_active_group"
            android:parentActivityName="com.satcat.kalys.StartTabActivity"
            android:theme="@style/AppTheme"
            tools:targetApi="jelly_bean" />
        <activity
            android:name="com.satcat.kalys.GroupTabActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_active_group"
            android:parentActivityName="com.satcat.kalys.StartTabActivity"
            android:theme="@style/AppTheme"
            tools:targetApi="jelly_bean" />
        <activity
            android:name="com.satcat.kalys.StartTabActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        </activity>
    </application>


</manifest>