        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sender_txt"
            android:text="Sender of Message"
            android:textSize="12sp"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/textGray"
            app:layout_constraintLeft_toRightOf="@id/sender_card"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time_txt"
            android:text=" â€¢ 2020:20:20"
            android:textSize="12sp"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/textGray"
            app:layout_constraintLeft_toRightOf="@id/sender_txt"
            app:layout_constraintTop_toTopOf="@id/sender_txt"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/message_txt_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="@color/redDivider"
            app:layout_constraintWidth_max="wrap"
            app:layout_constraintWidth_percent="0.8"
            app:layout_constraintTop_toBottomOf="@id/sender_txt"
            app:layout_constraintLeft_toRightOf="@id/sender_card"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/message_txt"
            android:text="Mensaje dwwdw ddwdwwddwwd  dwdwdwdwdw dwwdwddww  dwdwdwddwd d wd wd dwwddww  ddwwdwdwdd"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/textGray"
            app:layout_constraintLeft_toLeftOf="@+id/message_txt_card"
            app:layout_constraintRight_toLeftOf="@+id/message_txt_card"
            app:layout_constraintTop_toTopOf="@id/message_txt_card"
            android:layout_margin="10dp"/>

        </androidx.cardview.widget.CardView>





