<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:id="@+id/constraintLayout">

    <TextView
        android:id="@+id/notice_cell_channel_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Title of Channel"
        android:textSize="14sp"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/textGray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:layout_marginTop="10dp"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/notice_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/card_background_stroke"
        app:layout_constraintTop_toBottomOf="@id/notice_cell_channel_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/notice_cell_notice_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The Notice of Channel"
            android:scrollbars="vertical"
            android:maxLines="2"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/textGray"
            app:layout_constraintTop_toTopOf="@id/notice_container"
            app:layout_constraintLeft_toLeftOf="@id/notice_container"
            app:layout_constraintRight_toRightOf="@id/notice_container"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:id="@+id/notice_cell_sender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notice Sender"
            android:textSize="12sp"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/textGray"
            app:layout_constraintBottom_toTopOf="@id/notice_cell_swipe"
            app:layout_constraintLeft_toLeftOf="@id/notice_container"
            app:layout_constraintRight_toRightOf="@id/notice_container"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            />

        <TextView
            android:id="@+id/notice_cell_swipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Swipe for other notices"
            android:textAlignment="center"
            android:textSize="12sp"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/placeholderGray"
            android:alpha="0.22"
            app:layout_constraintBottom_toBottomOf="@id/notice_container"
            app:layout_constraintLeft_toLeftOf="@id/notice_container"
            app:layout_constraintRight_toRightOf="@id/notice_container"
            app:layout_constraintHorizontal_chainStyle="spread"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


