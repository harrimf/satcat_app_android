<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >



    <androidx.cardview.widget.CardView
        android:id="@+id/search_group_card"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:orientation="vertical"
        app:cardCornerRadius="64dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp">

        <ImageView
            android:id="@+id/search_group_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/search_group_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Group Title"
        android:textSize="14sp"
        android:textColor="@color/textGray"
        android:fontFamily="@font/montserrat_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/search_group_members"
        app:layout_constraintLeft_toRightOf="@id/search_group_card"
        app:layout_constraintStart_toEndOf="@id/search_group_card"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintVertical_chainStyle="spread" />

    <TextView
        android:id="@+id/search_group_members"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11 Members"
        android:textSize="12sp"
        android:textColor="@color/textGray"
        android:fontFamily="@font/montserrat_regular"
        app:layout_constraintTop_toBottomOf="@id/search_group_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/search_group_card"
        app:layout_constraintStart_toEndOf="@id/search_group_card"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintVertical_chainStyle="spread" />

    <TextView
        android:id="@+id/search_group_channels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24 Channels"
        android:textSize="12sp"
        android:textColor="@color/textGray"
        android:fontFamily="@font/montserrat_regular"
        app:layout_constraintTop_toTopOf="@+id/search_group_members"
        app:layout_constraintLeft_toRightOf="@+id/search_group_members"
        app:layout_constraintStart_toEndOf="@+id/search_group_members"/>

    <TextView
        android:id="@+id/search_group_already_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already Member"
        android:visibility="invisible"
        android:textSize="12sp"
        android:textColor="@color/redDivider"
        android:fontFamily="@font/montserrat_bold"
        app:layout_constraintTop_toTopOf="@+id/search_group_members"
        app:layout_constraintLeft_toRightOf="@id/search_group_channels"
        app:layout_constraintStart_toEndOf="@id/search_group_channels" />

</androidx.constraintlayout.widget.ConstraintLayout>

