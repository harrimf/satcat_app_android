<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <androidx.cardview.widget.CardView
        android:id="@+id/signup_image_card"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        app:cardCornerRadius="100dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:layout_marginTop="40dp"
        android:src="@drawable/flag_democratic_republic_of_the_congo">

        <ImageView
            android:id="@+id/signup_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:clickable="true"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/signup_image_tap_to_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap the image to set your profile picture, you can change it anytime"
        android:textSize="12sp"
        android:textColor="@color/textGray"
        android:textAlignment="center"
        android:fontFamily="@font/montserrat_regular"
        app:layout_constraintTop_toBottomOf="@+id/signup_image_card"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:layout_marginTop="5dp"/>

    <View
        android:id="@+id/signup_image_divider"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/redDivider"
        android:alpha="0.2"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/signup_image_continue_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sign_in_btn"
        style="?android:attr/borderlessButtonStyle"
        app:layout_constraintTop_toTopOf="@+id/signup_image_divider"
        app:layout_constraintBottom_toBottomOf="@+id/signup_image_divider"
        app:layout_constraintLeft_toLeftOf="@+id/signup_image_divider"
        app:layout_constraintRight_toRightOf="@+id/signup_image_divider"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintHorizontal_chainStyle="spread" />

</androidx.constraintlayout.widget.ConstraintLayout>