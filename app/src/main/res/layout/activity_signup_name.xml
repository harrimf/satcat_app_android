<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/signup_name_detail_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What can we call you?"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/textGray"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:layout_marginTop="40dp" />

    <EditText
        android:id="@+id/signup_name_firstname_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="First Name"
        android:textColor="@color/textGray"
        android:background="@android:color/transparent"
        android:fontFamily="@font/montserrat_medium"
        app:layout_constraintTop_toBottomOf="@+id/signup_name_detail_lbl"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        />

    <EditText
        android:id="@+id/signup_name_lastname_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Last Name"
        android:textColor="@color/textGray"
        android:background="@android:color/transparent"
        android:fontFamily="@font/montserrat_medium"
        app:layout_constraintTop_toBottomOf="@+id/signup_name_firstname_field"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"/>

    <View
        android:id="@+id/signup_name_divider"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/redDivider"
        android:alpha="0.2"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/signup_name_continue_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/continue_signup_name"
        style="?android:attr/borderlessButtonStyle"
        app:layout_constraintTop_toTopOf="@+id/signup_name_divider"
        app:layout_constraintBottom_toBottomOf="@+id/signup_name_divider"
        app:layout_constraintLeft_toLeftOf="@+id/signup_name_divider"
        app:layout_constraintRight_toRightOf="@+id/signup_name_divider"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintHorizontal_chainStyle="spread" />
</androidx.constraintlayout.widget.ConstraintLayout>