<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/settings_section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Settings"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_margin="16dp"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/settings_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ray"
        android:layout_marginTop="60dp"/>

    <TextView
        android:id="@+id/settings_username_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:fontFamily="sans-serif"
        android:layout_marginTop="80dp"
        android:textSize="12sp"/>

    <RelativeLayout
        android:id="@+id/settings_username_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/settings_username"
        android:layout_alignBottom="@+id/settings_username_info"
        android:clickable="true"/>

    <TextView
        android:id="@+id/settings_firstname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jack"
        android:layout_marginTop="110dp"/>

    <TextView
        android:id="@+id/settings_firstname_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First name"
        android:fontFamily="sans-serif"
        android:layout_marginTop="130dp"
        android:textSize="12sp"/>

    <RelativeLayout
        android:id="@+id/settings_firstname_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/settings_firstname"
        android:layout_alignBottom="@+id/settings_firstname_info"
        android:clickable="true"/>

    <TextView
        android:id="@+id/settings_lastname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bigby"
        android:layout_marginTop="160dp"/>

    <TextView
        android:id="@+id/settings_lastname_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last name"
        android:fontFamily="sans-serif"
        android:layout_marginTop="180dp"
        android:textSize="12sp"/>

    <RelativeLayout
        android:id="@+id/settings_lastname_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/settings_lastname"
        android:layout_alignBottom="@+id/settings_lastname_info"
        android:clickable="true"/>

    <TextView
        android:id="@+id/settings_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="jack@gmail.com"
        android:layout_marginTop="210dp"/>

    <TextView
        android:id="@+id/settings_email_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:fontFamily="sans-serif"
        android:layout_marginTop="230dp"
        android:textSize="12sp"/>

    <RelativeLayout
        android:id="@+id/settings_email_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/settings_email"
        android:layout_alignBottom="@+id/settings_email_info"
        android:clickable="true"/>

    <TextView
        android:id="@+id/settings_phonenumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone Number • Tap to Add"
        android:layout_marginTop="260dp"/>

    <TextView
        android:id="@+id/settings_phonenumber_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:fontFamily="sans-serif"
        android:layout_marginTop="280dp"
        android:textSize="12sp"/>

    <RelativeLayout
        android:id="@+id/settings_phonenumber_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/settings_phonenumber"
        android:layout_alignBottom="@+id/settings_phonenumber_info"
        android:clickable="true"/>

    <TextView
        android:id="@+id/settings_image_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ray Image"
        android:layout_marginTop="310dp"/>

    <TextView
        android:id="@+id/settings_image_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Image"
        android:fontFamily="sans-serif"
        android:layout_marginTop="330dp"
        android:textSize="12sp"/>

    <ImageButton
        android:id="@+id/settings_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="310dp"
        android:layout_alignParentRight="true"
        />

    <RelativeLayout
        android:id="@+id/settings_image_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/settings_image_txt"
        android:layout_alignBottom="@+id/settings_image"
        android:clickable="true"/>

    <TextView
        android:id="@+id/settings_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password • Tap to edit"
        android:layout_marginTop="360dp"/>

    <TextView
        android:id="@+id/settings_password_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:fontFamily="sans-serif"
        android:layout_marginTop="380dp"
        android:textSize="12sp"/>


    <RelativeLayout
        android:id="@+id/settings_password_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/settings_password"
        android:layout_alignBottom="@+id/settings_password_info"
        android:clickable="true"/>


    <Button
        android:id="@+id/settings_logout_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log out"
        android:stateListAnimator="@null"
        android:background="#fc241c"
        android:textColor="#fff"
        android:layout_margin="16dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>


    <View
        android:id="@+id/settings_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.85"
        android:background="#000000"
        android:visibility="invisible"
        android:clickable="true"
        />

    <TextView
        android:id="@+id/settings_edit_username_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:layout_marginTop="70dp"
        android:textColor="#FFF"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/settings_edit_username_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:hint="Ray"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:enabled="false"
        android:visibility="invisible" />

    <Button
        android:id="@+id/settings_edit_username_cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:background="@android:color/transparent"
        android:textColor="#fff"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="16dp"
        android:visibility="invisible"/>


    <Button
        android:id="@+id/settings_edit_username_update_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:background="@android:color/transparent"
        android:textColor="#fff"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:enabled="false"
        android:layout_margin="16dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/settings_edit_firstname_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update your First Name"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:layout_marginTop="70dp"
        android:textColor="#FFF"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/settings_edit_firstname_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:hint="Jack"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/settings_edit_firstname_cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:background="@android:color/transparent"
        android:textColor="#fff"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="16dp"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/settings_edit_firstname_update_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:background="@android:color/transparent"
        android:textColor="#fff"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/settings_edit_lastname_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update your Last Name"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:layout_marginTop="70dp"
        android:textColor="#FFF"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/settings_edit_lastname_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:hint="Bigby"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/settings_edit_lastname_cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:background="@android:color/transparent"
        android:textColor="#fff"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="16dp"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/settings_edit_lastname_update_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:background="@android:color/transparent"
        android:textColor="#fff"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/settings_edit_email_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update your Email"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:layout_marginTop="70dp"
        android:textColor="#FFF"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/settings_edit_email_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:hint="Email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/settings_edit_email_cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:background="@android:color/transparent"
        android:textColor="#fff"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="16dp"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/settings_edit_email_update_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:background="@android:color/transparent"
        android:textColor="#fff"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/settings_edit_phonenumber_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update your Phone Number"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:layout_marginTop="70dp"
        android:textColor="#FFF"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/settings_edit_phonenumber_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:hint="1122"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/settings_edit_phonenumber_cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:background="@android:color/transparent"
        android:textColor="#fff"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="16dp"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/settings_edit_phonenumber_update_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:background="@android:color/transparent"
        android:textColor="#fff"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/settings_edit_image_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update your profile picture"
        android:textColor="#fff"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:textSize="20sp"/>

    <ImageButton
        android:id="@+id/settings_edit_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/settings_edit_image_tap_to_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap image to edit"
        android:textColor="#fff"
        android:fontFamily="sans-serif"
        android:layout_marginTop="300dp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:textSize="12sp"/>


    <Button
        android:id="@+id/settings_edit_image_cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:background="@android:color/transparent"
        android:textColor="#fff"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="16dp"
        android:visibility="invisible"/>


    <Button
        android:id="@+id/settings_edit_image_update_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:background="@android:color/transparent"
        android:textColor="#fff"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/settings_edit_password_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change your password"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:layout_marginTop="70dp"
        android:textColor="#FFF"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/settings_edit_password_old_field"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:hint="Old Password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/settings_edit_password_field"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:hint="New Password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/settings_edit_password_confirm_field"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:hint="Confirm Password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/settings_edit_password_cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:background="@android:color/transparent"
        android:textColor="#fff"
        android:layout_marginTop="280dp"
        android:layout_alignParentLeft="true"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/settings_edit_password_update_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:background="@android:color/transparent"
        android:textColor="#fff"
        android:layout_marginTop="280dp"
        android:layout_alignParentRight="true"
        android:visibility="invisible"/>




</RelativeLayout>